Vagrant.configure("2") do |config|
  config.vm.box = "{{ vm.box }}"
  config.vm.hostname = "{{ vm.name }}"
  config.vm.network "private_network", ip: "{{ vm.ip }}"
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "{{ vm.memory }}"
    vb.cpus = {{ vm.cpus }}
  end
  
  config.vm.synced_folder "../shared", "/vagrant_shared"

  config.vm.provision "shell", inline: <<-SHELL
    apt-get update 
    apt-get install -y fish 
    # read from the mounted directory 
    HOST_PUBLIC_KEY=$(cat /vagrant_shared/id_rsa.pub)
    mkdir -p /home/vagrant/.ssh
    echo "$HOST_PUBLIC_KEY" >> /home/vagrant/.ssh/authorized_keys
    chown -R vagrant:vagrant /home/vagrant/.ssh
    chmod 700 /home/vagrant/.ssh
    chmod 600 /home/vagrant/.ssh/authorized_keys
  SHELL
end